<h1>Listing milestones</h1>

<table>
  <tr>
    <th>Complete</th>
    <th>Due</th>
    <th>Idea</th>
    <th>Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @milestones.each do |milestone| %>
  <tr>
    <td><%= milestone.complete %></td>
    <td><%= milestone.due %></td>
    <td><%= milestone.idea_id %></td>
    <td><%= milestone.summary %></td>
    <td><%= link_to 'Show', milestone %></td>
    <td><%= link_to 'Edit', edit_milestone_path(milestone) %></td>
    <td><%= link_to 'Destroy', milestone, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

